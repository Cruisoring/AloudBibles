<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.	-->
	<style name="AppBaseTheme" parent="android:Theme.Light">
		<!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.		-->
	</style>

	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">
		<!-- All customizations that are NOT specific to a particular API-level can go here. -->
	</style>

	<style name="EasyTableCellStyle" parent="@android:style/TextAppearance.Medium">
		<item name="android:background">@drawable/text_selector</item>
		<item name="android:padding">2dp</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="SiblingIndicator" parent="@android:style/TextAppearance.Medium">
		<item name="android:paddingLeft">5dp</item>
		<item name="android:paddingRight">5dp</item>
		<!-- item name="android:textSize">20sp</item> -->
		<item name="android:textStyle">bold</item>
	</style>

	<style name="SelectableListView" parent="@android:style/Widget.ListView">
		<item name="android:listSelector">@drawable/list_item_background</item>
	</style>
	
	<style name="titleTextView" parent="@android:style/TextAppearance.Large">
		<item name="android:textStyle">bold</item>
		<item name="android:shadowColor">#1f1f1f</item>
		<item name="android:shadowRadius">3</item>
		<item name="android:shadowDx">2</item>
		<item name="android:shadowDy">2</item>
	</style>
	
	<style name="primaryTextView" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/navy_blue</item>
		<!-- item name="android:background">@drawable/list_item_background</item> -->
	</style>
	
	<style name="secondaryTextView" parent="@android:style/TextAppearance.Medium">
		<item name="android:textColor">@color/light_purple</item>
		<!-- item name="android:background">@drawable/list_item_background</item> -->
	</style>
	
	<style name="primaryTitle" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">@color/navy_blue</item>
		<item name="android:textStyle">bold</item>
		<!-- item name="android:background">@drawable/list_item_background</item> -->
	</style>
	
	<style name="secondaryTitle" parent="@android:style/TextAppearance.Large">
		<item name="android:textColor">@color/light_purple</item>
		<item name="android:textStyle">italic</item>
	</style>
	
</resources>